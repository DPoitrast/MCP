# National Dairy Farm MCP Server Configuration

# Dairy Farm API Credentials (Required)
DAIRY_FARM_CLIENT_ID=your_client_id_here
DAIRY_FARM_CLIENT_SECRET=your_client_secret_here

# Optional: Override default API URL
# DAIRY_FARM_API_URL=https://eval.nationaldairyfarm.com/dfdm/api

# MCP Server Configuration
DAIRY_FARM_MCP_SERVER_HOST=localhost
DAIRY_FARM_MCP_SERVER_PORT=8001
DAIRY_FARM_ENVIRONMENT=development
DAIRY_FARM_DEBUG=true
DAIRY_FARM_LOG_LEVEL=INFO

# API Settings
DAIRY_FARM_API_TIMEOUT=30
DAIRY_FARM_API_VERSION=3.2
DAIRY_FARM_MAX_RETRIES=3

# Authentication Settings
DAIRY_FARM_TOKEN_REFRESH_THRESHOLD_MINUTES=5

# MCP Client Settings (Optional)
MCP_CLIENT_REQUIRE_CLIENT_AUTH=false
MCP_CLIENT_REQUESTS_PER_MINUTE=100
MCP_CLIENT_BURST_LIMIT=20